import requests
import os

def download_image(url, folder):
    """Downloads an image from a URL and saves it to a specified folder."""
    try:
        # Send a GET request to the URL
        response = requests.get(url)
        response.raise_for_status()  # Raise an error for bad responses

        # Get the image name from the URL
        image_name = url.split("/")[-1]

        # Create the folder if it doesn't exist
        if not os.path.exists(folder):
            os.makedirs(folder)

        # Create the full path for the image
        image_path = os.path.join(folder, image_name)

        # Write the image to a file
        with open(image_path, 'wb') as file:
            file.write(response.content)

        print(f"Downloaded: {image_name} to {folder}")

    except requests.exceptions.RequestException as e:
        print(f"Error downloading {url}: {e}")

def main():
    print("Welcome to the Image Downloader!")
    folder = input("Enter the folder where you want to save images: ")

    while True:
        url = input("Enter the image URL (or type 'exit' to quit): ")
        if url.lower() == 'exit':
            print("Exiting the Image Downloader. Goodbye!")
            break
        download_image(url, folder)

if __name__ == "__main__":
    main()
