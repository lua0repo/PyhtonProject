import tkinter as tk
from tkinter import messagebox
import yfinance as yf

def get_price():
    stock_symbol = entry.get()
    stock = yf.Ticker(stock_symbol)
    price = stock.history(period="1d")['Close'].iloc[-1]
    messagebox.showinfo("Stock Price", f"The current price of {stock_symbol} is: ${price:.2f}")

# Setting up the GUI
root = tk.Tk()
root.title("Stock Price Tracker")

label = tk.Label(root, text="Enter Stock Symbol:")
label.pack()

entry = tk.Entry(root)
entry.pack()

button = tk.Button(root, text="Get Price", command=get_price)
button.pack()

root.mainloop()
